{
  "name": "typescript-starter",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "main": "dist/index.js",
  "workspaces": [
    "packages/local-package"
  ],
  "scripts": {
    "build": "rimraf ./dist && npx tsc",
    "build:all": "npm run build --workspaces && npm run build",
    "start": "npm run build:all && node dist/index.js",
    "start:all": "npm run build:all && node dist/index.js",
    "start:dev": "npx nodemon --inspect",
    "clean": "rimraf ./dist",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format && npm run lint"
    }
  },
  "keywords": [
    "typescript",
    "starter",
    "esm",
    "packages"
  ],
  "author": "Odair Trujillo",
  "license": "LGPL-3.0-or-later",
  "devDependencies": {
    "@types/node": "^20.4.0",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "eslint": "^8.37.0",
    "eslint-config-eslint": "^9.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-no-loops": "^0.3.0",
    "eslint-plugin-prettier": "^5.0.0-alpha.2",
    "husky": "^8.0.3",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.1",
    "ts-node": "^10.9.1",
    "tslog": "^4.8.2",
    "typescript": "^5.0.3"
  },
  "dependencies": {
    "local-package": "^1.0.0"
  }
}
